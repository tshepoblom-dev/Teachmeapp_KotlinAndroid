        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/accent</item>
        <!-- Header panel -->
        <item name="materialCalendarHeaderLayout">@style/Calendar.HeaderLayout</item>
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButton.Theme</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButton.Theme</item>
