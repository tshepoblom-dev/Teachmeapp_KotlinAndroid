<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_16"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.lumko.teachme.ui.widget.RoundishImageView
                android:id="@+id/itemSalesBuyerImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:roundedCorners="all" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemSalesBuyerNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_8"
                android:ellipsize="end"
                android:fontFamily="@font/bold"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/text_color5"
                android:textSize="@dimen/textsize_14d"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/itemSalesBuyerImg"
                app:layout_constraintEnd_toStartOf="@+id/itemSalesTypeTv"
                app:layout_constraintTop_toTopOf="@id/itemSalesBuyerImg"
                tools:ignore="SpUsage" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemSalesTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_8"
                android:ellipsize="end"
                android:fontFamily="@font/regular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/textsize_11d"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintEnd_toStartOf="@+id/itemSalesTypeTv"
                app:layout_constraintStart_toEndOf="@+id/itemSalesBuyerImg"
                app:layout_constraintTop_toBottomOf="@id/itemSalesBuyerNameTv"
                tools:ignore="SpUsage" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemSalesCalendarImg"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginStart="@dimen/margin_10"
                app:layout_constraintBottom_toBottomOf="@id/itemSalesBuyerImg"
                app:layout_constraintStart_toEndOf="@+id/itemSalesBuyerImg"
                app:srcCompat="@drawable/ic_calendar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemSalesDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4"
                android:fontFamily="@font/regular"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/textsize_11d"
                app:layout_constraintBottom_toBottomOf="@id/itemSalesCalendarImg"
                app:layout_constraintStart_toEndOf="@+id/itemSalesCalendarImg"
                app:layout_constraintTop_toTopOf="@+id/itemSalesCalendarImg"
                tools:ignore="SpUsage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemSalesTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_marginEnd="@dimen/margin_8"
                android:fontFamily="@font/regular"
                android:paddingStart="@dimen/margin_8"
                android:paddingTop="2dp"
                android:paddingEnd="@dimen/margin_8"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_9d"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/itemSalesBuyerImg"
                tools:ignore="SpUsage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemSalesPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:fontFamily="@font/bold"
                android:textColor="@color/accent"
                android:textSize="@dimen/textsize_15d"
                app:layout_constraintBottom_toBottomOf="@id/itemSalesBuyerImg"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="SpUsage" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>