<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_16"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:paddingBottom="120dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsUserEmailKeyTv"
            android:fontFamily="@font/regular"
            android:text="@string/email"
            android:textColor="@color/gull_gray"
            android:textSize="@dimen/textsize_11d" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settingsUserEmailTv"
            tools:ignore="KeyboardInaccessibleWidget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edtx_height_size"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/round_view_white_with_border_corner20"
            android:fontFamily="@font/regular"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="2dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textsize_15d" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/regular"
            android:text="@string/name"
            android:textColor="@color/gull_gray"
            android:textSize="@dimen/textsize_11d" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settingsUserNameEdtx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edtx_height_size"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/round_view_white_with_border_corner20"
            android:fontFamily="@font/regular"
            android:inputType="text"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="2dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textsize_15d" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsUserPhoneNumberKeyTv"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/regular"
            android:text="@string/phone_number"
            android:textColor="@color/gull_gray"
            android:textSize="@dimen/textsize_11d" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settingsUserPhoneNumberTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edtx_height_size"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/round_view_white_with_border_corner20"
            android:clickable="false"
            android:gravity="start|center_vertical"
            android:focusable="false"
            android:fontFamily="@font/regular"
            android:inputType="none"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="2dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textsize_15d" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/regular"
            android:text="@string/language"
            android:textColor="@color/gull_gray"
            android:textSize="@dimen/textsize_11d" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settingsUserLngTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edtx_height_size"
            android:gravity="start|center_vertical"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/round_view_white_with_border_corner20"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_arrow_bottom_gray"
            android:drawablePadding="@dimen/margin_16"
            android:focusable="true"
            android:fontFamily="@font/regular"
            android:foreground="@drawable/ripple_effect_corner_20"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="@dimen/margin_16"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textsize_15d" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsUserReferralKeyTv"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/regular"
            android:text="@string/referral_url"
            android:textColor="@color/gull_gray"
            android:textSize="@dimen/textsize_11d" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settingsUserReferralTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edtx_height_size"
            android:layout_marginTop="@dimen/margin_4"
            android:gravity="start|center_vertical"
            android:background="@drawable/round_view_white_with_border_corner20"
            android:drawableEnd="@drawable/ic_copy"
            android:drawablePadding="@dimen/margin_16"
            android:fontFamily="@font/regular"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="@dimen/margin_16"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textsize_15d" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/settingsJoinNewsletterSwitch"
            app:track="@drawable/switch_custom_track"
            app:useMaterialThemeColors="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:checked="false"
            android:fontFamily="@font/regular"
            android:text="@string/join_newsletter"
            android:textColor="@color/gull_gray"
            android:textSize="@dimen/textsize_14d"
            android:thumb="@drawable/switch_custom_thumb" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/settingsProfileMessagesSwitch"
            app:track="@drawable/switch_custom_track"
            app:useMaterialThemeColors="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="@font/regular"
            android:text="@string/profile_messages"
            android:textColor="@color/gull_gray"
            android:textSize="@dimen/textsize_14d"
            android:thumb="@drawable/switch_custom_thumb" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

