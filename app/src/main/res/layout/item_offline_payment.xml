<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_8"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemOfflinePaymentImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@drawable/round_view_accent_corner20"
                android:padding="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_financial" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemOfflinePaymentTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_8"
                android:ellipsize="end"
                android:fontFamily="@font/medium"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:textColor="@color/text_color5"
                android:textSize="@dimen/textsize_14d"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/itemOfflinePaymentImg"
                app:layout_constraintTop_toTopOf="@id/itemOfflinePaymentImg"
                tools:ignore="SpUsage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemOfflinePaymentRefTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_4"
                android:ellipsize="end"
                android:fontFamily="@font/medium"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/textsize_11d"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/itemOfflinePaymentImg"
                app:layout_constraintTop_toBottomOf="@id/itemOfflinePaymentTitleTv"
                tools:ignore="SpUsage" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemOfflinePaymentCalendarImg"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginStart="@dimen/margin_10"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintBottom_toBottomOf="@id/itemOfflinePaymentImg"
                app:layout_constraintStart_toEndOf="@+id/itemOfflinePaymentImg"
                app:layout_constraintTop_toBottomOf="@+id/itemOfflinePaymentTitleTv"
                app:srcCompat="@drawable/ic_calendar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemOfflinePaymentDateTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:includeFontPadding="false"
                android:fontFamily="@font/regular"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/textsize_14d"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintBottom_toBottomOf="@id/itemOfflinePaymentCalendarImg"
                app:layout_constraintStart_toEndOf="@+id/itemOfflinePaymentCalendarImg"
                tools:ignore="SpUsage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemOfflinePaymentAmountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:paddingStart="3dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="3dp"
                android:fontFamily="@font/regular"
                android:textSize="@dimen/textsize_9d"
                app:layout_constraintBottom_toBottomOf="@id/itemOfflinePaymentDateTimeTv"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="SpUsage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itemOfflinePaymentStatusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4"
                android:fontFamily="@font/regular"
                android:textColor="@color/white"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="@dimen/textsize_9d"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>