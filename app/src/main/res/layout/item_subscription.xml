<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/round_view_white_corner20"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_subscription_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_subscription_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/bold"
        android:includeFontPadding="false"
        android:textColor="@color/text_color5"
        android:textSize="@dimen/textsize_28d"
        tools:ignore="SpUsage" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_subscription_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/regular"
        android:textColor="@color/gull_gray"
        android:textSize="@dimen/textsize_13d"
        tools:ignore="SpUsage" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_subscription_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/regular"
        android:textColor="@color/accent"
        android:textSize="@dimen/textsize_28d"
        tools:ignore="SpUsage" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_subscription_days_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/regular"
        android:textColor="@color/gull_gray"
        android:textSize="@dimen/textsize_13d"
        tools:ignore="SpUsage" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_subscription_classes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/regular"
        android:textColor="@color/gull_gray"
        android:textSize="@dimen/textsize_13d"
        tools:ignore="SpUsage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_subscription_purchase_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:fontFamily="@font/regular"
        android:text="@string/purchase"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_13d"
        app:backgroundTint="@color/accent"
        app:cornerRadius="@dimen/btn_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chargeAccountPaymentAmountEdtx"
        app:rippleColor="@color/rippleColor"
        tools:ignore="SpUsage" />

</LinearLayout>


