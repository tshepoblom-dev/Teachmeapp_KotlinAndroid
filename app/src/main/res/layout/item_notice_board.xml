<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_dashboard_general_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin_16"
    android:layout_marginTop="@dimen/margin_16"
    android:layout_marginEnd="@dimen/margin_16"
    android:background="@drawable/round_view_white_corner20"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_notice_board_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/bold"
        android:includeFontPadding="false"
        android:textColor="@color/text_color5"
        android:textSize="@dimen/textsize_13d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_notice_board_user_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/margin_8"
        app:layout_constraintStart_toStartOf="@+id/item_notice_board_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_notice_board_title_tv"
        app:srcCompat="@drawable/ic_profile" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_notice_board_sender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/regular"
        android:textColor="@color/gull_gray"
        android:textSize="@dimen/textsize_9d"
        app:layout_constraintBottom_toBottomOf="@+id/item_notice_board_user_img"
        app:layout_constraintStart_toEndOf="@+id/item_notice_board_user_img"
        app:layout_constraintTop_toTopOf="@+id/item_notice_board_user_img"
        tools:ignore="SpUsage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_notice_board_calendar_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        app:layout_constraintStart_toEndOf="@+id/item_notice_board_sender_tv"
        app:layout_constraintTop_toBottomOf="@id/item_notice_board_title_tv"
        app:srcCompat="@drawable/ic_calendar" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_notice_board_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginEnd="@dimen/margin_16"
        android:fontFamily="@font/regular"
        android:textColor="@color/gull_gray"
        android:textSize="@dimen/textsize_9d"
        app:layout_constraintBottom_toBottomOf="@+id/item_notice_board_user_img"
        app:layout_constraintStart_toEndOf="@+id/item_notice_board_calendar_img"
        app:layout_constraintTop_toTopOf="@+id/item_notice_board_user_img"
        tools:ignore="SpUsage" />

    <View
        android:id="@+id/item_notice_board_seperator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_16"
        android:background="@color/lightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_notice_board_user_img" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_notice_board_message_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:ellipsize="end"
        android:fontFamily="@font/regular"
        android:gravity="top|start"
        android:textColor="@color/gull_gray"
        android:textSize="@dimen/textsize_13d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_notice_board_seperator"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>
